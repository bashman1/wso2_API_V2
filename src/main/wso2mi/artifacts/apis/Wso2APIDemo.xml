            <!-- <http.get configKey="DataService">
                <relativePath>services/CustomerDataService/Citizen/{$ctx:nin}
                </relativePath>
                <headers>[["Accept","application/json"],]</headers>
                <forceScAccepted>false</forceScAccepted>
